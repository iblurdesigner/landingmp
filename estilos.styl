test(color=red)
	border solid 1px color
	
@import 'https://fonts.googleapis.com/css?family=Glegoo:400,700';	
	
body
	font-family 'Glegoo'
	font-size 16px
	font-weight 400
	
.rojo
	border solid 1px red

.naranja
	border solid 1px orange

.verde
	border solid 1px green
	
.rosado
	border solid 1px pink
	
.celeste
	border solid 1px cyan
.azul
	border solid 1px blue
.alfa
	border solid .1px rgba(0, 0, 0, 0)	
		
/*COLOR NATANJA MEATPRO PARA TEXTO	*/
$colorMP = #F9A81A				
	
.centrar
	display flex
	justify-content center

/*SUBTITULOS 2 COLOR NARANJA*/
.subti2
	color $colorMP
	font-size 2.5rem
	font-weight 700
	
.subti3
	color $colorMP
	font-size 1.5rem
	font-weight 700
	
.subtiNegro	
	color black
	font-size 3rem
	font-family 'Glegoo'
	font-weight 700
	margin 0
		
.sombraNav
	box-shadow 0 13px 20px 0 rgba(0, 0, 0, 0.5)
	width 100vw
	background-color white
	
.sombra
	box-shadow 0 5px 4px 0 rgba(0, 0, 0, 0.5)

.sombraText
	text-shadow: 0 2px 2px #000000
	
.btnEntrar
	border-radius 20px
	background-color $colorMP
	padding .6rem 2.1rem
		
.navmenu
	width 100%
	box-shadow none
	background-color white	

.navmenu ul a
	color #a7a7a7
	
.navmenu ul a:hover
	background-color #F9A81A
	color white
.logoNav
	width 189px
	
.logo img
	width 118px
	
.resumen
	font-size 1rem
	font-family 'Glegoo'
	color gray
	line-height normal
		
.fpresentacion
	background-image url('../img/mobile/fondoinicio@2x.jpg')
	background-position center
	background-repeat no-repeat
	width 100vw

/*SECCION CARNIVERY*/	
.carHead
	background-image url('../img/mobile/carHeadMobile@2x.jpg')
	background-position center
	background-repeat no-repeat
	background-size cover
	width 100vw
	height 580px
	
.textCarnivery
	margin-top 280px
	text-align center
	color white	

.madera
	background-image url('../img/mobile/maderaBlanca@2x.jpg')
	background-position center
	background-repeat no-repeat
	background-size cover
	width 100vw
	height auto

.cajaBlanca
	background-color white
	border-radius 20px	

/*SECCION FIN DE SEMANA*/	
.fondoFinde
	background-image url('../img/mobile/fFinde.jpg')
	background-position center
	background-repeat no-repeat
	background-size cover
	width 100vw
	height 592px
	display flex
	align-items center

.logoFinde
	background-image url('../img/svg/lFinde.svg')
	background-position center, center
	background-repeat no-repeat
	width 80vw
	height 227px	
